# Recipe Translation API Configuration
# Copy this file to .env and add your actual API keys

# For AI-powered recipe translation
# Get your key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative: OpenAI API (if you prefer ChatGPT)
# OPENAI_API_KEY=your_openai_api_key_here

# Translation Settings
TRANSLATION_MODEL=claude-3-5-sonnet-20241022
TRANSLATION_MAX_TOKENS=4000

# Build Settings  
AUTO_TRANSLATE_ON_BUILD=true
TRANSLATION_CACHE_TTL=86400  # 24 hours in seconds